# ===== API CONFIGURATION =====
# Backend API URL
NEXT_PUBLIC_API_URL=http://vcm-backend:8000

# ===== AI SERVICE KEYS =====
# OpenAI API Key (para geração de biografias e análises)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (para análises avançadas)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key (para diversificação de modelos)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ===== DATABASE CONFIGURATION =====
# PostgreSQL para logs e cache local
DATABASE_URL=postgresql://vcm:vcmpassword@postgres:5432/vcm_db
POSTGRES_DB=vcm_db
POSTGRES_USER=vcm
POSTGRES_PASSWORD=vcmpassword

# Redis para cache e filas
REDIS_URL=redis://redis:6379

# ===== BACKEND CONFIGURATION =====
# FastAPI Settings
ENVIRONMENT=production
LOG_LEVEL=info
API_PREFIX=/api/v1

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH=/app/uploads

# ===== VCM SPECIFIC SETTINGS =====
# Default Company Settings
DEFAULT_COMPANY_INDUSTRY=Tecnologia
DEFAULT_PERSONAS_COUNT=20
DEFAULT_LANGUAGE=pt-br

# Script Execution Settings
SCRIPT_TIMEOUT=3600  # 1 hour
MAX_CONCURRENT_EXECUTIONS=3
ENABLE_SCRIPT_LOGGING=true

# ===== MONITORING & LOGGING =====
# Application Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30

# Log Configuration
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# ===== SECURITY SETTINGS =====
# CORS Configuration
ALLOWED_ORIGINS=https://your-production-domain.com,https://your-staging-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# SSL/TLS
FORCE_HTTPS=true
SECURE_COOKIES=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ===== EASYPANEL SPECIFIC =====
# Container Health Check
HEALTHCHECK_ENDPOINT=/health
HEALTHCHECK_TIMEOUT=10

# Resource Limits
MEMORY_LIMIT=1024m
CPU_LIMIT=1.0

# Backup Settings
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM